.achievements
  display flex
  padding 128px 135px 200px
  background-color #D49E31

  &__subtitle
    font-size 18px
    line-height 32px
    font-weight 700
    margin 0
    padding 0
    padding-bottom 21px

  &__title
    font-size 72px
    line-height 80px
    font-weight 700
    margin 0
    padding 0
    padding-bottom 33px

  &__main-illustration
    width 870px
    height 624px
    object-fit cover
    position relative
    margin 0
    padding 0
    z-index 2
    justify-content start

  &__wrap
    position absolute
    z-index 3
    text-align right
    margin-top 74px
    right 135px

  &__shape
    position absolute
    z-index 1
    width 176px
    height 176px
    right 450px
    bottom -4130px
